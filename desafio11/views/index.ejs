<%- include('./layout/mainLayout') %>
        <div class="flex flex-col gap-3 items-center justify-center h-screen w-screen px-12">
            <h1 class="text-3xl text-emerald-500">Login</h1>
            <input type="text" class="inputName px-4 py-2 outline-none border rounded-xl w-full xs:w-1/2 lg:w-1/5 text-center" placeholder="Ingrese su nombre por favor">
            <button class="btnSubmit px-3 py-2 bg-emerald-400 hover:bg-emerald-600 text-white rounded-xl transition-all duration-300">Enter</button>
        </div>

        <script>
            const btnSubmit = document.querySelector('.btnSubmit')
            const inputName = document.querySelector('.inputName')

            btnSubmit.addEventListener('click', async () => {
                if(inputName.value.length == 0){
                    return alert('Por favor, rellena el campo')
                }

                const data = await fetch('/api/session', { 
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ user: inputName.value })
                })

                console.log(await data.json())
            })
        </script>

    </body>
</html>