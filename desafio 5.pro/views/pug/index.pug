include ./layout/mainLayout.pug

doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Document
    body(class="d-flex flex-column max-100 align-items-center justify-content-center")
        form(action="/api/productos", method="POST") 
            div(class="mb-3")
                label(class="form-label")
                    div(class="mr-10") Title
                    input(type="text", name="title" class="form-control")

            div(class="mb-3")
                label(class="form-label")
                    div(class="mr-10") Price
                    input(type="text", name="price" class="form-control")

            div(class="mb-3")
                label(class="form-label")
                    div(class="mr-10") Thumbnail
                    input(type="text", name="thumbnail" class="form-control")
            
            input(type="submit", value="Save" class="btn btn-primary")

        a(href="/products" class="btn btn-seoncary") Ver Productos